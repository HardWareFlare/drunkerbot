doctype html
html
    head
        title='Drunkerbot Status Page'
        //- link(rel='stylesheet', title='light' href='/stylesheets/style_light.css')
        link(rel='stylesheet', href='/stylesheets/jquery/jquery-ui.css')
        link(rel='stylesheet', href='/stylesheets/style_dark.css')
        link(rel='stylesheet', href='/stylesheets/layout.css')
        script(src='/scripts/moment.js')
        script(src='https://code.jquery.com/jquery-1.12.4.js')
        script(src='https://code.jquery.com/ui/1.12.1/jquery-ui.js')
        script.
            var drunkerstatus = !{JSON.stringify(drunkerstatus)};
            var dboxes = !{JSON.stringify(dboxes)};
            $( function() {
                $( "#accordion" ).accordion();
            } );
            $( function() {
                $( "#tabs" ).tabs();
            } );
    body
        div#bodyholder
            div#UserData
                if logindata != undefined
                    h1= logindata.username
                        img(height='32', width='32', src='https://cdn.discordapp.com/avatars/' + logindata.id + '/' + logindata.avatar + '.png')
                        div.discordLogin
                            a(href='/') Logout
                else
                    div.discordLogin
                        a(href='/api/discord/login') Discord Login
            div#banner
                h1= 'Drunkerboxes Live Status: ' + drunkerstatus.state
            if (drunkerstatus.state == true)
                div#livebox
                    img(src=drunkerstatus.userAvatar height='32' width='32')
                    a(href=drunkerstatus.url) Stream Link
                    p= 'Host: ' + drunkerstatus.hostname + ' '
            div#linksbox
                p
                    a(href='https://github.com/HardWareFlare/drunkerbot') DrunkerBot Code Repo
                    br
                    a(href='https://github.com/IntPirate/DrunkerBoxes') DrunkerTracker Code Repo
            div#tabs
                ul
                    li
                        a(href='#tabs-1') Streams
                    li
                        a(href='#tabs-2') Top 10
                    li
                        a(href='#tabs-3') Stats
                div#tabs-1
                    div#accordion
                        for value, index in dboxes
                            h3= '#' + (dboxes.length - index) + ' streamed on '
                                script= 'document.write(moment.unix(' + value.start + ').format(\'M/D/YY HH:mm\'));'

                            div
                                div
                                    p= value.hostname
                                        //This needs to be changed so it shows the user's most recent avatar
                                        img(height='32', width='32' src=value.userAvatar)
                                        a(href=value.url) Link
                                    if value.stoptime !== null
                                        p
                                            |Finished on: 
                                            script= 'document.write(moment.unix(' + value.end + ').format(\'M/D/YY HH:mm\'));'
                                            
                                    if logindata != undefined && value.hostid == logindata.id
                                        p
                                            a(href='#') EDIT

                div#tabs-2
                    div.dootRow
                        div.dootCell.dootCellName= 'User'
                        div.dootCell.dootCellDouble= 'Doots'
                        div.dootCell= 'Messages'
                    for value, index in doots
                        div.dootRow
                            div.dootCell.dootCellName= doots[index].username
                            div.dootCell.updootText.dootCellAlt= doots[index].updoots
                            div.dootCell.downdootText= doots[index].downdoots
                            div.dootCell.dootCellAlt= doots[index].messages
                div#tabs-3
                    div
                        p= 'App Version: ' + dbotstats.appver
                        p= 'Times Started: ' + dbotstats.restarts
                        p
                            |Last Started:
                            script= 'document.write(moment.unix(' + dbotstats.laststart + ').format(\'M/D/YY HH:mm\'));'

                        p= 'Website Hits: ' + (dbotstats.webhits + 1)
