doctype html
html
    head
        title='Drunkerbot Status Page'
        link(rel='stylesheet', href='/stylesheets/layout.css')
        //- link(rel='stylesheet', title='light' href='/stylesheets/style_light.css')
        link(rel='stylesheet', title='dark' href='/stylesheets/style_dark.css')
        script.
            var drunkerstatus = !{JSON.stringify(drunkerstatus)};
    body
        center
            h1 Drunkerboxes Live Status: !{drunkerstatus.state}
            script.
                if (drunkerstatus.state == true) {
                    document.write('<br><br>Host: <img src="' + drunkerstatus.hostpic + '" height=32 width=32/> ' + drunkerstatus.host + '<br><br><a href="' + drunkerstatus.url + '">Stream Link</a>');
                }
            br
            a.href='https://github.com/HardWareFlare/drunkerbot'
                DrunkerBot Code Repo
            a.href='https://github.com/IntPirate/DrunkerBoxes'
                DrunkerTracker Code Repo
